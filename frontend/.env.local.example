# =============================================================================
# BugTrackr Environment Configuration
# =============================================================================
# Copy this file to .env.local and update with your actual values
# DO NOT commit .env.local to version control

# -----------------------------------------------------------------------------
# Legacy Configuration (will be removed after migration)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# AppFlyte Collection DB Configuration
# -----------------------------------------------------------------------------
# Base URL for the Collection DB API
# This URL includes the workspace ID, user context, and base collection path
APPFLYTE_COLLECTION_BASE_URL=https://appflyte-backend.ameya.ai/your_workspace_id_here/api/collection/your_workspace_id_here/user/public/cm/0/dpdo_bug_tracker

# API Key for authenticating with Collection DB
# Replace with your actual API key from AppFlyte dashboard
APPFLYTE_COLLECTION_API_KEY=your_actual_api_key_here

# -----------------------------------------------------------------------------
# Optional Configuration
# -----------------------------------------------------------------------------
# Enable debug logging for development (true/false)
# Set to false in production
DEBUG=false
